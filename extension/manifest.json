{
    "manifest_version": 3,
    "name": "Nomad MemorAI",
    "version": "1.4",
    "description": "Injects your project context into ChatGPT, Gemini, DeepSeek, Mistral & Perplexity.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://ai-universal-memory-production.up.railway.app/*",
        "https://chat.deepseek.com/*",
        "https://chat.mistral.ai/*",
        "https://www.perplexity.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://gemini.google.com/*",
                "https://chat.deepseek.com/*",
                "https://chat.mistral.ai/*",
                "https://www.perplexity.ai/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}